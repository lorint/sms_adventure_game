<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Money</th>
      <th>Fear</th>
      <th>Health</th>
      <th>Age</th>
      <th>Chutzpah</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.user %></td>
        <td><%= character.name %></td>
        <td><%= character.money %></td>
        <td><%= character.fear %></td>
        <td><%= character.health %></td>
        <td><%= character.age %></td>
        <td><%= character.chutzpah %></td>
        <td><%= character.location %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

